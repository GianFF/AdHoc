<%= render 'tabs' do %>
  <%= form_for :cliente, html: {class: 'form-horizontal'} do |cliente| %>
    <%= render partial: 'form', locals: {cliente: cliente, read_only: true} %>
  <% end %>
  <div class="form-group cliente__show-botones" role="group">
    <%= button_to 'Editar', edit_cliente_path(current_abogado, @cliente),
                  :method => :get,
                  class: 'btn btn-success cliente__show-boton-editar' %>
    <%= button_to 'Borrar', @cliente,
                  method: :delete,
                  class: 'btn btn-danger',
                  data: { confirm: "Â¿Seguro que quiere eliminar un cliente?" } %>
  </div>
<% end %>
