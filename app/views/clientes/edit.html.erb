<%= render 'tabs' do %>
  <%= form_for :cliente, url: cliente_path(current_abogado, @cliente), method: :patch,
               html: {class: 'form-horizontal'} do |cliente| %>
    <%= render partial: 'form', locals: {cliente: cliente, read_only: false} %>
    <%= render partial: 'boton_guardar', locals: {cliente: cliente} %>
  <% end %>
  <%= link_to 'Cancelar', cliente_path(@cliente.id), method: :get, class: 'btn btn-warning cliente__edit-cancelar' %>
<% end %>