<h2>Crear cuenta</h2><br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-xs-6 field">
      <%= f.label :nombre %><br />
      <%= f.text_field :nombre, autofocus: true %>
    </div>

    <div class="col-xs-6 field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="col-xs-6 field">
      <%= f.label :apellido %><br />
      <%= f.text_field :apellido %>
    </div>

    <div class="col-xs-6 field">
      <%= f.label :contraseña %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres minimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="col-xs-6 field">
      <%= f.label :sexo %><br />
      <%= f.text_field :sexo %>
    </div>

    <div class="col-xs-6 field">
      <%= f.label :confirmar_contraseña %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Crear", {class: 'btn btn-success'}%>
  </div>
  <br/>
<% end %>
<%= render "devise/shared/links" %>
