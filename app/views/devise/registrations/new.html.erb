<h2>Crear cuenta</h2><br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">

    <div class="col-xs-4 field">
      <%= f.label :nombre %><br />
      <%= f.text_field :nombre, autofocus: true, class: 'form-control'%>

      <%= f.label :apellido %><br />
      <%= f.text_field :apellido, class: 'form-control'%>

      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control'%>

      <%= f.label :matricula %><br />
      <%= f.text_field :matricula, class: 'form-control'%>
    </div>

    <div class="col-xs-4 field">
      <%= f.label :nombre_del_colegio_de_abogados %><br />
      <%= f.text_field :nombre_del_colegio_de_abogados, class: 'form-control'%>

      <%= f.label :cuit %><br />
      <%= f.number_field :cuit, class: 'form-control', id:'cuit'%>

      <%= f.label :domicilio_procesal %><br />
      <%= f.text_field :domicilio_procesal, class: 'form-control'%>

      <%= f.label :domicilio_electronico %><br />
      <%= f.text_field :domicilio_electronico, class: 'form-control'%>
    </div>

    <div class="col-xs-4 field">
      <%= f.label :genero %><br />
      <%= f.select(:genero, Genero::Genero.generos, options = {include_blank: true}, html_options = {class: 'form-control'}) %>

      <%= f.label :contraseña %>
      <% if @minimum_password_length%>
        <em>(<%= @minimum_password_length %> caracteres minimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>

      <%= f.label :confirmar_contraseña %><br />
      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'%>
    </div>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit 'Crear', {class: 'btn btn-success'}%>
  </div>
  <br/>
<% end %>
<%= render 'devise/shared/links' %>
