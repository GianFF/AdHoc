<% if abogado_signed_in? %>
  <ul class="nav nav-pills nav-stacked">
    <li role="presentation" class="active">
      <div class="input-group">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button" id="panel_izquierdo__buscar" >
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </span>
        <input type="text" class="form-control" placeholder="Clientes" id="panel_izquierdo__query">
      </div>

    </li>
    <li role="presentation">
      <button type="button" class="btn btn-default btn-block">
        <i class="glyphicon glyphicon-calendar pull-left"></i> Calendario
      </button>
    </li>
    <li role="presentation">
      <button type="button" class="btn btn-default btn-block">
        <i class="glyphicon glyphicon-bell pull-left"></i> Notificaciones
      </button>
    </li>
    <li role="presentation">
      <button type="button" class="btn btn-default btn-block">
        <i class="glyphicon glyphicon-file pull-left"></i> Notas Rapidas
      </button>
    </li>
    <li role="presentation">
      <button type="button" class="btn btn-default btn-block">
        <i class="glyphicon glyphicon-lock pull-left"></i> Personal
      </button>
    </li>
    <li role="presentation">
      <button type="button" class="btn btn-default btn-block">
        <i class="glyphicon glyphicon-comment pull-left"></i> Comunidad
      </button>
    </li>
  </ul>
<% end %>
<script type="text/javascript">
  var url = "http://0.0.0.0:3000/clientes/buscar/";
  $( "#panel_izquierdo__buscar" ).prop('disabled', true);

  $("#panel_izquierdo__query").on('change keyup paste', function() {
    nombre = $("#panel_izquierdo__query").val();
    if(nombre != "" ){

      $( "#panel_izquierdo__buscar" ).prop('disabled', false);
    }else{

      $( "#panel_izquierdo__buscar" ).prop('disabled', true);
    }
  });

  $( "#panel_izquierdo__buscar" ).click(function() {
    $.ajax({
      method: "GET",
      url: url + nombre
    });
  });

  $('#panel_izquierdo__query').keypress(function(e){
    if(e.keyCode==13){

      $('#panel_izquierdo__buscar').click();
    }
  });
</script>