<nav class="navbar navbar-default cabecera__container">
  <div class="container-fluid">

    <div class="navbar-header">
      <a class="navbar-brand" href="/">
        <img alt="Adhoc" class="logo" src="/assets/adhoc-logo.png">
      </a>
    </div>

    <p class="navbar-text cabecera__nombre-abogado">
      <% if abogado_signed_in? %>
          <% if current_abogado.sexo == 'Masculino' %>
              Dr.
          <% else %>
              Dra.
          <% end %>
          <a href="/" class="navbar-link">
            <%= current_abogado.nombre %> <%= current_abogado.apellido %>
          </a>
      <% else %>
          <a href="" class="navbar-link">AdHoc</a>
      <% end %>
    </p>
    <form class="navbar-form navbar-right">
      <% if abogado_signed_in? %>
        <div class="form-group">
          <%= link_to destroy_abogado_session_path, method: :delete, class: "btn btn-danger navbar-btn navbar-right" do %>
            <i class="glyphicon glyphicon-log-out"></i> Salir
          <% end %>
          <%= render 'boton_perfil' %>
        </div>
      <% else %>
        <div class="form-group">
          <button type="button" class="btn btn-info navbar-btn navbar-right">
            <i class="glyphicon glyphicon-phone"></i> Contactenos
          </button>
        </div>
      <% end %>
    </form>
  </div>
</nav>