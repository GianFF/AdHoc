<!DOCTYPE html>
<html>
  <head>
    <title>AdHoc</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- TinyMCE -->
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=dj1lnmrq393pmzosuh4k3yts0zbzige6zs3hjl7789fksu4d"></script>
    <script>
      tinymce.init(
          {
            selector:'#area_de_trabajo',
//            TODO:
//            language_url: '/config/locales/es.js',
//            fixed_toolbar_container: '#tinyMC_toolbar',
            branding: false,
            plugins: [
              'advlist autolink lists charmap print preview hr anchor pagebreak',
              'searchreplace wordcount visualblocks visualchars fullscreen insertdatetime nonbreaking',
              'save table contextmenu directionality paste textcolor'
            ],
            toolbar: 'save | insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | ' +
            'bullist numlist outdent indent | print preview fullpage | forecolor backcolor emoticons',
            removed_menuitems: 'undo, redo, newdocument, formats'
          }
      );
    </script>
  </head>

  <body class="container-fluid body__body-adhoc">
    <div class="body__adhoc">
      <!-- CABECERA -->
      <div class="row">
        <%= render 'shared/cabecera' %>
      </div>
      <div class="row">
        <% if abogado_signed_in? %>
          <!-- PANEL IZQUIERDO -->
          <div class="col-xs-9 col-sm-3">
            <%= render 'shared/panel_izquierdo' %>
          </div>
          <!-- AREA DE TRABAJO -->
          <div class="col-xs-9">
            <%= render 'shared/alertas' %>
            <%= yield %>
          </div>
        <% else %>
          <!-- LOGIN -->
          <div class="col-xs-6">
            <%= render 'shared/alertas' %>
            <%= yield %>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
