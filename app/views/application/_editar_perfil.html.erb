<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), controller: :registrations, html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="col-xs-6">
      <div class="field">
        <%= f.label :nombre, id: "perfil_nombre" %><br />
        <%= f.text_field :nombre, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :apellido, id: "perfil_apellido" %><br />
        <%= f.text_field :apellido, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email, id: "perfil_email"  %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>
    <div class="col-xs-6">

      <div class="field">
        <%= f.label :contraseña %> <br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> caracteres minimo</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :confirmacion_de_contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :contraseña_actual, id: "perfil_password" %> <br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <br>
        <%= f.submit "Editar", {class: 'btn btn-success'}%>
        <br>
        <button id="editar_pefil__boton-editar" class="btn btn-success" type="button"></button>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-xs-12">
    <h3>Cancelar mi cuenta</h3>
    <p>Envianos un mail para contarnos por qué cancelas tu cuenta a: adhoc@edymberg.com
      <%= button_to "Cancelar mi cuenta", registration_path(resource_name),
                    data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'%>
    </p>
  </div>
</div>
<script type="text/javascript">
  $("#editar_pefil__boton-editar" ).click(function() {

    var nombre   = $("#perfil_nombre").val();
    var apellido = $("#perfil_apellido").val();
    var email    = $("#perfil_email").val();
    var password = $("#perfil_password").val();

    $.ajax({
      url: "http://0.0.0.0:3000/abogados",
      type: 'PUT',
      data: "nombre="+nombre+"&apellido="+apellido+"&email="+email+"&password="+password,
      success: function(data) {
        debugger;
      }
    });
  });
</script>