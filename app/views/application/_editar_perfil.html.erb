<div class="row">
  <%= form_for(resource, url: registration_path(resource)) do |f| %>
    <div class="col-xs-6">
      <div class="field">
        <%= f.label :nombre, id: "perfil_nombre" %><br />
        <%= f.text_field :nombre, autofocus: true, class: 'form-control registrations__input' %>
      </div>

      <div class="field">
        <%= f.label :apellido, id: "perfil_apellido" %><br />
        <%= f.text_field :apellido, autofocus: true, class: 'form-control registrations__input' %>
      </div>

      <div class="field">
        <%= f.label :email, id: "perfil_email"  %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control registrations__input' %>
      </div>
    </div>
    <div class="col-xs-6">

      <div class="field">
        <%= f.label :nueva_contraseña %> <br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control registrations__input' %>
        <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> caracteres minimo</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :confirmacion_de_contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control registrations__input' %>
      </div>

      <div class="field">
        <%= f.label :contraseña_actual, id: "perfil_password" %> <br />
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control registrations__input' %>
      </div>

      <div class="actions">
        <br>
        <%= f.submit "Guardar", {class: 'btn btn-success'}%>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-xs-12">
    <h3>Cancelar mi cuenta</h3>
    <p>Envianos un mail para contarnos por qué cancelas tu cuenta a: adhoc@edymberg.com
      <%= button_to "Cancelar mi cuenta", registration_path(resource_name),
                    data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'%>
    </p>
  </div>
</div>